#ifndef _CORE_GUARD
#define _CORE_GUARD
#include <stdio.h>
#include <time.h>
#include <stdlib.h>
#endif

#define DECK_SIZE 10
struct _card 
{
	int health;
	int damage;
	int mana_cost;
	int special_effect;
};

struct _cards_stack 
{ 
	struct _card card[DECK_SIZE];
	int top;
	int deck_health;
};

int create_card(struct _card *card);
void display_card (struct _card card);
void init_deck (struct _cards_stack *cs);
