#include "core.h"

int create_card(struct _card *card) 
{
	card->health = rand()%10;
	card->damage = rand()%10;
	card->mana_cost = (card->health + card->damage)%5;
	return 0;
}

void display_card (struct _card card)
{
	printf("*****Mana cost:%d*****\n",card.mana_cost); 
	printf("*****ATK:%d HP:%d *****\n",card.damage,card.health);
}

void init_deck (struct _cards_stack *cs) {
	int i = 0;
	cs->top = 0;
	cs->deck_health = 50;
	for (; i < DECK_SIZE; i++)
	{
		create_card(&(*cs).card[cs->top]);
		cs->top++;
	}

}
